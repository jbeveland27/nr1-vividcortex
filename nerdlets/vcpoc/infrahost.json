{
    "title": "",
    "widgets": [
        {
            "name": "cpu-usage",
            "renderer": "vizco",
            "props": {
                "type": "area",
                "title": "CPU Usage",
                "query": {
                    "account_id": "{{entity.accountId}}",
                    "nrql": "SELECT average(cpuSystemPercent) AS System, average(cpuIOWaitPercent) AS 'I/O wait', average(cpuUserPercent) AS User, average(cpuStealPercent) AS Steal from SystemSample WHERE entityId = '{{entity.domainId}}' TIMESERIES",
                    "events": {
                        "agent_ids": ["{{entity.domainId}}"]
                    }
                },
                "config": {
                    "yScale": {
                        "static": true,
                        "domain": [0, 100]
                    }
                }
            },
            "layout": {
                "x": 0,
                "y": 0,
                "width": 4,
                "height": 3
            }
        },
        {
            "name": "top-processes-by-cpu",
            "renderer": "vizco",
            "props": {
                "type": "line",
                "title": "Top processes by CPU",
                "query": {
                    "account_id": "{{entity.accountId}}",
                    "nrql": "SELECT average(cpuPercent) from ProcessSample FACET processDisplayName LIMIT 5 WHERE entityId = '{{entity.domainId}}' TIMESERIES",
                    "events": {
                        "agent_ids": ["{{entity.domainId}}"]
                    }
                }
            },
            "layout": {
                "x": 4,
                "y": 0,
                "width": 4,
                "height": 3
            }
        },
        {
            "name": "load-average",
            "renderer": "vizco",
            "props": {
                "type": "line",
                "title": "Load average",
                "query": {
                    "account_id": "{{entity.accountId}}",
                    "nrql": "SELECT average(loadAverageOneMinute), average(loadAverageFiveMinute) AS 'Five minute', average(loadAverageFifteenMinute) AS 'Fifteen minute' from SystemSample WHERE entityId = '{{entity.domainId}}' TIMESERIES",
                    "events": {
                        "agent_ids": ["{{entity.domainId}}"]
                    }
                }
            },
            "layout": {
                "x": 8,
                "y": 0,
                "width": 4,
                "height": 3
            }
        }
    ]
}